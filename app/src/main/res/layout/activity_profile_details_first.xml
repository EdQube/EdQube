<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".initialScreens.ProfileDetailsFirstActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gbold"
        android:text="Profile Details"
        android:textColor="@color/secondary"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Step -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/mregular"
        android:text="Step 1/2"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintBottom_toBottomOf="@id/textView4"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for Form -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name *"
                android:textColor="@color/black"
                android:fontFamily="@font/mmedium"/>
            <EditText
                android:id="@+id/editTextFullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter Name"
                android:padding="12dp"
                android:textColor="@color/black"
                android:fontFamily="@font/mbold"
                android:layout_marginBottom="12dp" />

            <!-- Phone Number + Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Phone -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number *"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mmedium" />
                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="0000000000"
                        android:maxLength="10"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mbold"
                        android:inputType="phone"
                        android:padding="12dp" />
                </LinearLayout>

                <Space android:layout_width="8dp" android:layout_height="match_parent" />

                <!-- Age -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age *"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mmedium" />

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/edittext_bg"
                        android:hint="Age"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mbold"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Location Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"
                android:fontFamily="@font/mmedium"/>

            <Button
                android:id="@+id/buttonDetectLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detect My Location"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/mbold" />

            <TextView
                android:id="@+id/textViewDetectedAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detected address will appear here"
                android:textColor="#000000"
                android:padding="8dp"
                android:background="#F2F2F2"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/mregular" />

            <!-- Pin Code -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pin Code *"
                android:textColor="@color/black"
                android:fontFamily="@font/mmedium"/>

            <EditText
                android:id="@+id/editTextPinCode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="000000"
                android:background="@drawable/edittext_bg"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/black"
                android:fontFamily="@font/mbold"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:fontFamily="@font/mmedium"/>

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:minLines="1"
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:textColor="@color/black"
                android:fontFamily="@font/mbold"
                android:layout_marginBottom="12dp" />

            <!-- Qualification -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qualification"
                android:textColor="@color/black"
                android:fontFamily="@font/mmedium"/>
            <Spinner
                android:id="@+id/spinnerQualification"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F2F2F2"
                android:layout_marginBottom="24dp" />

            <!-- Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back"
                    android:fontFamily="@font/mbold"
                    android:textColor="#000000"
                    android:backgroundTint="#D9D9D9" />

                <Space android:layout_width="12dp" android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next â†’"
                    android:fontFamily="@font/mbold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#001F45" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
