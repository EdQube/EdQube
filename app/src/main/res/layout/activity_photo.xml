<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initialScreens.PhotoActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/skipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp" />
        </RelativeLayout>

        <!-- Heading -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Complete Your Profile"
            android:fontFamily="@font/gbold"
            android:textColor="#000000"
            android:textSize="20sp"/>

        <!-- Profile Picture Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_google_button"
            android:padding="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedImageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Picture"
                android:fontFamily="@font/mregular"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Upload Profile Button -->
            <Button
                android:id="@+id/uploadProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Picture"
                android:fontFamily="@font/glight"
                android:backgroundTint="#102A57"
                android:textColor="@android:color/white" />

            <!-- Profile ProgressBar -->
            <ProgressBar
                android:id="@+id/progressProfile"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="0"
                android:max="100"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:progressTint="#102A57"/>

        </LinearLayout>

        <!-- Cover Picture Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_google_button"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="210dp"
                android:layout_height="110dp"
                android:src="@drawable/cover"
                android:scaleType="centerCrop"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cover Picture"
                android:textColor="#000000"
                android:fontFamily="@font/mregular"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Upload Cover Button -->
            <Button
                android:id="@+id/uploadCoverButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Picture"
                android:fontFamily="@font/glight"
                android:backgroundTint="#102A57"
                android:textColor="@android:color/white" />

            <!-- Cover ProgressBar -->
            <ProgressBar
                android:id="@+id/progressCover"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:progress="0"
                android:max="100"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:progressTint="#102A57"/>

        </LinearLayout>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#F2F2F2"
                android:text="Back"
                android:fontFamily="@font/mbold"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonNext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Next â†’"
                android:backgroundTint="#001F5B"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/mbold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
